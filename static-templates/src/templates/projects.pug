    //- Projects archive
    section.section
      .container
        article.article
          header
            h2.h2='Project archive'

          header.has-text-centered
            h3.h3='TIMELINE'
          .content.has-text-centered
            .timeline
              .year
                .project.is-purple(style='--position: 5%')
