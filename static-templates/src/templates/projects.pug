    section.section.has-title
      .container
        h2.h2='Project highlights'

    //- Project highlights
    section.section.has-carousel
      .container.has-carousel
        article
          header
            h2.h2.is-blocked='IKEA Catalogue'

          .carousel.has-text-centered
            div.is-background(style='background-image:url(assets/images/ikea.jpg)')
          p.is-blocked='We designed together with IKEA their supply chain catalogue.'
          .buttons
            a.button.is-next.is-secondary='View project'

    .spacer
    
    section.section.has-selectors
      .container.flex-centered
        .buttons
          button.button.is-selector.is-primary
          button.button.is-selector.is-secondary
          button.button.is-selector.is-secondary
          button.button.is-selector.is-secondary
          button.button.is-selector.is-secondary

    //- Latest projects
    section.section
      .container
        article.article
          header
            h2.h2='Latest projects'

          .columns.is-grid
            .column.is-4
              .card.is-stretched
                .card-image
                  figure.image
                    img(src='assets/images/working-area-photo.png')
                .card-content.has-label
                  h3.h3='Centrum Ecological Chape receives design prize in contest for world’s most...'
                  p
                    | 21-02-2017
                  button.button.is-selector.is-purple.is-pulled-left
                  a.button.is-pulled-right
                    i.fas.fa-chevron-right
